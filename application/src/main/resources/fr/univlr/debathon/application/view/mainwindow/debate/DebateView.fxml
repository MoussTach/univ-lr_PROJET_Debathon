<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>

<BorderPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univlr.debathon.application.view.mainwindow.debate.DebateView">
   <top>
      <StackPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets/>
         </BorderPane.margin>
         <ToolBar maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>
         <BorderPane>
            <padding>
               <Insets right="30.0"/>
            </padding>
            <left>
               <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
                  <padding>
                     <Insets left="20.0"/>
                  </padding>
                  <Button fx:id="btnDeleteDebate" mnemonicParsing="false" onAction="#act_btnDeleteDebate"
                          style="-fx-background-radius: 10;">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@/img/delete_64.png"/>
                        </ImageView>
                     </graphic>
                  </Button>
               </HBox>
            </left>
            <right>
               <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
                  <Button fx:id="btnShowCreateQuestion" mnemonicParsing="false" onAction="#act_btnShowCreateQuestion"
                          style="-fx-background-radius: 10;">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@/img/add_64.png"/>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="btnShowStatMail" layoutX="10.0" layoutY="19.0" mnemonicParsing="false"
                          onAction="#act_btnShowStatMail" style="-fx-background-radius: 10;">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@/img/documentWrite_64.png"/>
                        </ImageView>
                     </graphic>
                  </Button>
               </HBox>
            </right>
         </BorderPane>
         <Label fx:id="lblTitle" text="lblTitle" StackPane.alignment="CENTER">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <font>
               <Font name="Calibri Bold" size="25.0"/>
            </font>
         </Label>
      </StackPane>
   </top>
   <center>
      <SplitPane dividerPositions="0.2" orientation="VERTICAL" BorderPane.alignment="CENTER">
         <BorderPane>
            <top>
               <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                  <HBox alignment="CENTER" maxWidth="600.0" VBox.vgrow="NEVER">
                     <FlowPane fx:id="flowCategory" alignment="CENTER" columnHalignment="CENTER" prefWidth="0.0"
                               HBox.hgrow="ALWAYS">
                        <HBox.margin>
                           <Insets bottom="2.0" left="3.0" right="3.0" top="4.0"/>
                        </HBox.margin>
                     </FlowPane>
                     <Separator orientation="VERTICAL"/>
                     <FlowPane fx:id="flowTag" alignment="CENTER" columnHalignment="CENTER" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                           <Insets bottom="2.0" left="3.0" right="3.0" top="4.0"/>
                        </HBox.margin>
                     </FlowPane>
                  </HBox>
                  <Separator maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS"/>
               </VBox>
            </top>
            <center>
               <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="CENTER">
                  <WebView fx:id="webDebate" minHeight="-1.0" prefHeight="-1.0" prefWidth="-1.0"/>
               </ScrollPane>
            </center>
         </BorderPane>
         <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxHeight="1.7976931348623157E308"
                     maxWidth="1.7976931348623157E308">
            <VBox fx:id="vboxQuestion" alignment="CENTER" spacing="10.0"/>
         </ScrollPane>
      </SplitPane>
   </center>
</BorderPane>
