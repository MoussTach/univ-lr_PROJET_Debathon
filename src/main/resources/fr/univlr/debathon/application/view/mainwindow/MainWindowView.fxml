<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>

<BorderPane fx:id="bPaneMainView" minHeight="400.0" minWidth="800.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univlr.debathon.application.view.mainwindow.MainWindowView">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <fx:include source="MenuBarView.fxml" />
            <StackPane>
               <children>
                  <ToolBar maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                     <StackPane.margin>
                        <Insets />
                     </StackPane.margin></ToolBar>
                  <BorderPane>
                     <left>
                        <Button fx:id="btnPrev" mnemonicParsing="false" onAction="#act_btnPrev" text="&lt;" BorderPane.alignment="CENTER" />
                     </left>
                     <right>
                        <Button fx:id="btnHome" mnemonicParsing="false" onAction="#act_btnHome" text="Home" BorderPane.alignment="CENTER" />
                     </right>
                     <StackPane.margin>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                     </StackPane.margin>
                  </BorderPane>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </StackPane>
            </children>
        </VBox>
    </top>
    <center>
        <fx:include source="HomePageView.fxml" />
    </center>
    <bottom>
        <StatusBar fx:id="statusBarMainView" BorderPane.alignment="CENTER">
            <rightItems>
                <Separator orientation="VERTICAL" prefHeight="200.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="1.0" left="10.0" right="10.0" top="1.0" />
                    </padding>
                </Separator>
                <Button fx:id="btnExternalTask_MainView" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#act_btnExternalTask_MainView" textAlignment="CENTER" BorderPane.alignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../../../../../../img/external_task_64x64.png" />
                        </ImageView>
                    </graphic>
                    <padding>
                        <Insets bottom="-0.5" left="-0.5" right="-0.5" top="-0.5" />
                    </padding>
                </Button>
            </rightItems>
        </StatusBar>
    </bottom>
    <stylesheets>
        <URL value="@../../../../../../css/application.css" />
    </stylesheets>
</BorderPane>
